<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Analytics Dashboard - Portfolio Martin</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
            padding: 20px;
            background: #0f172a;
            color: #e2e8f0;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .header {
            margin-bottom: 30px;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: #1e293b;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #334155;
        }
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: #3b82f6;
        }
        .stat-label {
            color: #94a3b8;
            margin-top: 5px;
        }
        .chart-container {
            background: #1e293b;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #334155;
            margin-bottom: 20px;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .table th,
        .table td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #334155;
        }
        .table th {
            color: #cbd5e1;
            font-weight: 600;
        }
        .loading {
            text-align: center;
            color: #94a3b8;
            padding: 40px;
        }
        .error {
            color: #ef4444;
            padding: 20px;
            background: #7f1d1d;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .refresh-btn {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            margin-left: 10px;
        }
        .refresh-btn:hover {
            background: #2563eb;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ“Š Analytics Dashboard</h1>
            <p>Informe de interacciones del portfolio</p>
            <button class="refresh-btn" onclick="loadAnalytics()">ðŸ”„ Actualizar</button>
        </div>

        <div id="loading" class="loading">
            Cargando datos de analytics...
        </div>

        <div id="error" class="error" style="display: none;">
        </div>

        <div id="dashboard" style="display: none;">
            <!-- Basic Stats -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value" id="totalVisitors">-</div>
                    <div class="stat-label">Visitantes Ãšnicos (7 dÃ­as)</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="totalPageViews">-</div>
                    <div class="stat-label">Vistas de PÃ¡gina</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="totalInteractions">-</div>
                    <div class="stat-label">Interacciones</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="avgSessionDuration">-</div>
                    <div class="stat-label">DuraciÃ³n Promedio (seg)</div>
                </div>
            </div>

            <!-- Language Distribution -->
            <div class="chart-container">
                <h3>ðŸ“Š DistribuciÃ³n de Idiomas</h3>
                <div id="languageStats"></div>
            </div>

            <!-- Most Viewed Sections -->
            <div class="chart-container">
                <h3>ðŸ‘€ Secciones MÃ¡s Visitadas</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>SecciÃ³n</th>
                            <th>Visualizaciones</th>
                            <th>%</th>
                        </tr>
                    </thead>
                    <tbody id="sectionsTable">
                    </tbody>
                </table>
            </div>

            <!-- Daily Stats -->
            <div class="chart-container">
                <h3>ðŸ“ˆ EstadÃ­sticas Diarias</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Visitantes</th>
                            <th>Vistas</th>
                            <th>Interacciones</th>
                        </tr>
                    </thead>
                    <tbody id="dailyTable">
                    </tbody>
                </table>
            </div>

            <!-- Device Stats -->
            <div class="chart-container">
                <h3>ðŸ“± EstadÃ­sticas de Dispositivos</h3>
                <div id="deviceStats"></div>
            </div>

            <!-- Top Referrers -->
            <div class="chart-container">
                <h3>ðŸ”— Principales Referentes</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Referente</th>
                            <th>Visitas</th>
                        </tr>
                    </thead>
                    <tbody id="referrersTable">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        async function loadAnalytics() {
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const dashboard = document.getElementById('dashboard');
            
            loading.style.display = 'block';
            error.style.display = 'none';
            dashboard.style.display = 'none';

            try {
                const response = await fetch('/api/analytics?report=weekly');
                if (!response.ok) throw new Error('Failed to fetch analytics');
                
                const data = await response.json();
                renderDashboard(data);
                
                loading.style.display = 'none';
                dashboard.style.display = 'block';
            } catch (err) {
                loading.style.display = 'none';
                error.style.display = 'block';
                error.textContent = 'Error al cargar los datos: ' + err.message;
            }
        }

        function renderDashboard(data) {
            // Basic stats
            document.getElementById('totalVisitors').textContent = data.summary.totalVisitors;
            document.getElementById('totalPageViews').textContent = data.summary.totalPageViews;
            document.getElementById('totalInteractions').textContent = data.summary.totalInteractions;
            document.getElementById('avgSessionDuration').textContent = data.summary.averageSessionDuration;

            // Language stats
            const langTotal = data.summary.languageDistribution.es + data.summary.languageDistribution.en;
            const langStats = document.getElementById('languageStats');
            langStats.innerHTML = `
                <div style="margin: 10px 0;">
                    ðŸ‡ªðŸ‡¸ EspaÃ±ol: ${data.summary.languageDistribution.es} (${langTotal > 0 ? Math.round((data.summary.languageDistribution.es / langTotal) * 100) : 0}%)
                </div>
                <div style="margin: 10px 0;">
                    ðŸ‡ºðŸ‡¸ English: ${data.summary.languageDistribution.en} (${langTotal > 0 ? Math.round((data.summary.languageDistribution.en / langTotal) * 100) : 0}%)
                </div>
            `;

            // Most viewed sections
            const sectionsTable = document.getElementById('sectionsTable');
            const totalSectionViews = data.summary.mostViewedSections.reduce((sum, section) => sum + section.views, 0);
            sectionsTable.innerHTML = data.summary.mostViewedSections.map(section => `
                <tr>
                    <td>${section.section}</td>
                    <td>${section.views}</td>
                    <td>${totalSectionViews > 0 ? Math.round((section.views / totalSectionViews) * 100) : 0}%</td>
                </tr>
            `).join('');

            // Daily stats
            const dailyTable = document.getElementById('dailyTable');
            dailyTable.innerHTML = data.dailyStats.map(day => `
                <tr>
                    <td>${day.date}</td>
                    <td>${day.visitors}</td>
                    <td>${day.pageViews}</td>
                    <td>${day.interactions}</td>
                </tr>
            `).join('');

            // Device stats
            const deviceStats = document.getElementById('deviceStats');
            const deviceTotal = data.summary.deviceStats.desktop + data.summary.deviceStats.tablet + data.summary.deviceStats.mobile;
            deviceStats.innerHTML = `
                <div style="margin: 10px 0;">
                    ðŸ–¥ï¸ Desktop: ${data.summary.deviceStats.desktop} (${deviceTotal > 0 ? Math.round((data.summary.deviceStats.desktop / deviceTotal) * 100) : 0}%)
                </div>
                <div style="margin: 10px 0;">
                    ðŸ“± Tablet: ${data.summary.deviceStats.tablet} (${deviceTotal > 0 ? Math.round((data.summary.deviceStats.tablet / deviceTotal) * 100) : 0}%)
                </div>
                <div style="margin: 10px 0;">
                    ðŸ“ž Mobile: ${data.summary.deviceStats.mobile} (${deviceTotal > 0 ? Math.round((data.summary.deviceStats.mobile / deviceTotal) * 100) : 0}%)
                </div>
            `;

            // Referrers
            const referrersTable = document.getElementById('referrersTable');
            referrersTable.innerHTML = data.summary.topReferrers.length > 0 
                ? data.summary.topReferrers.map(referrer => `
                    <tr>
                        <td>${referrer.referrer}</td>
                        <td>${referrer.visits}</td>
                    </tr>
                `).join('')
                : '<tr><td colspan="2">No hay datos de referentes</td></tr>';
        }

        // Load analytics on page load
        loadAnalytics();

        // Auto-refresh every 5 minutes
        setInterval(loadAnalytics, 5 * 60 * 1000);
    </script>
</body>
</html>